{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],

  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "src/react-app.d.ts"
    ]
  },

  "rules": {
    "indent": [true, "spaces", 2],
    "quotemark": [true, "single", "jsx-single"],
    "whitespace": [true, "check-module", "check-operator", "check-decl", "check-preblock", "check-type", "check-branch"],
    "no-parameter-reassignment": { "severity": "warning" },
    "no-any": { "severity": "warning" },
    "prefer-const": { "severity": "warning" },
    "no-console": { "severity": "warning" },
    "no-empty": { "severity": "warning" },
    "jsx-self-close": { "severity": "warning" },
    "ordered-imports": false,
    "jsx-boolean-value": false,
    "member-ordering": false,
    "object-literal-sort-keys": false,
    "forin": false,
    "member-access": false,
    "jsx-no-lambda": false,
    "no-shadowed-variable": false,
    "no-string-literal": false,
    "no-unused-expression": false,
    "no-debugger": false,
    "variable-name": ["check-format", "ban-keywords"],
    "max-classes-per-file": false,
    "max-line-length": [true, {"limit":  150,  "ignore-pattern": "^import [^,]+ from | implements "}],
    "class-name": true,
    "arrow-return-shorthand": true,
    "prefer-object-spread": true,
    "semicolon": { "options": [ "always", "ignore-bound-class-methods" ] },
    "trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
    "type-literal-delimiter": true
  }
}
